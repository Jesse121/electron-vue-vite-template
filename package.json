{
	"name": "electron-template",
	"private": true,
	"version": "2.0.21",
	"author": "Jesse",
	"main": "dist/electron/main/index.js",
	"description": "Really simple electron + vue + vite boilerplate",
	"scripts": {
		"dev": "vite",
		"prebuild": "vue-tsc --noEmit && vite build",
		"build": "electron-builder",
		"preview": "vite preview",
		"prepare": "husky install",
		"preinstall": "npx only-allow yarn",
		"postversion": "conventional-changelog -p angular -i CHANGELOG.md -s -r 0 && git add CHANGELOG.md && git commit -m \"chore: update changelog\" && git push",
		"lint": "eslint src --fix --ext .vue,.ts,.tsx && stylelint \"src/**/*.{vue,css,less,scss}\" --quiet --fix"
	},
	"dependencies": {
		"adm-zip": "0.5.9",
		"axios": "0.27.2",
		"element-plus": "2.2.9",
		"normalize.css": "8.0.1",
		"pinia": "2.0.16",
		"progress-stream": "2.0.0",
		"qs": "6.11.0",
		"sequelize": "6.18.0",
		"sqlite3": "5.0.2",
		"vue": "3.2.37",
		"vue-router": "4.1.2"
	},
	"devDependencies": {
		"@commitlint/cli": "17.0.3",
		"@commitlint/config-conventional": "17.0.3",
		"@ls-lint/ls-lint": "1.10.0",
		"@originjs/vite-plugin-commonjs": "1.0.3",
		"@types/node": "18.0.6",
		"@types/qs": "6.9.7",
		"@types/sqlite3": "3.1.8",
		"@typescript-eslint/eslint-plugin": "5.30.7",
		"@typescript-eslint/parser": "5.30.7",
		"@vitejs/plugin-vue": "3.0.0",
		"conventional-changelog-cli": "2.2.2",
		"electron": "19.0.8",
		"electron-builder": "23.1.0",
		"electron-icon-builder": "2.0.1",
		"electron-log": "4.4.8",
		"electron-updater": "5.0.1",
		"eslint": "7.32.0",
		"eslint-config-prettier": "8.5.0",
		"eslint-plugin-prettier": "4.2.1",
		"eslint-plugin-simple-import-sort": "7.0.0",
		"eslint-plugin-vue": "7.15.1",
		"husky": "8.0.0",
		"less": "4.1.3",
		"lint-staged": "11.1.2",
		"prettier": "2.7.1",
		"stylelint": "13.13.1",
		"stylelint-config-prettier": "8.0.2",
		"stylelint-config-rational-order": "0.1.2",
		"stylelint-prettier": "1.2.0",
		"typescript": "4.6.4",
		"unplugin-auto-import": "0.9.3",
		"unplugin-vue-components": "0.21.1",
		"vite": "3.0.0",
		"vite-plugin-electron": "0.7.5",
		"vue-global-api": "0.4.1",
		"vue-tsc": "0.38.4"
	},
	"lint-staged": {
		"*.{vue,ts,js}": [
			"prettier --write",
			"eslint --fix",
			"ls-lint"
		],
		"*.{vue,less,scss}": [
			"prettier --write",
			"stylelint --quiet --fix",
			"ls-lint"
		]
	},
	"engines": {
		"node": ">= 16.0.0"
	}
}
